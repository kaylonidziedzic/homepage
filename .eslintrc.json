{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "indent": ["warn", 2],
    "no-multiple-empty-lines": ["warn", { "max": 2 }],
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "prefer-const": "warn"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "fetch": "readonly",
    "alert": "readonly",
    "prompt": "readonly",
    "confirm": "readonly",
    "FileReader": "readonly",
    "Blob": "readonly",
    "URL": "readonly",
    "FormData": "readonly"
  }
}
